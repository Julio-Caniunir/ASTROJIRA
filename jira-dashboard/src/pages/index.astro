---
import JiraIssues from '../components/JiraIssues.tsx';

// Obtener informaci칩n de autenticaci칩n desde cookies
const accessToken = Astro.cookies.get('microsoft_access_token')?.value;
const userInfoCookie = Astro.cookies.get('user_info')?.value;
const userInfo = userInfoCookie ? JSON.parse(userInfoCookie) : null;

// Obtener par치metros de URL para mostrar mensajes de autenticaci칩n
const authStatus = Astro.url.searchParams.get('auth');
---

<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Jira Dashboard</title>
  </head>
  <body>
    <JiraIssues 
      client:only="react" 
      userInfo={userInfo}
      isAuthenticated={!!accessToken}
      authStatus={authStatus}
    />
  </body>
</html>
